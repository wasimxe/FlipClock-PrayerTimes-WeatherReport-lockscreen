<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When radio button is selected (checked) - light green background with border -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#E8F5E9" />
            <stroke android:width="2dp" android:color="#4CAF50" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- When radio button is not selected (unchecked) - light gray background -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="#F5F5F5" />
            <stroke android:width="1dp" android:color="#E0E0E0" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
