<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp"
        android:paddingTop="8dp">

        <!-- Permission Card (Hidden when granted) -->
        <LinearLayout
            android:id="@+id/permissionCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="20dp"
            android:elevation="2dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Permissions Required"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This app needs overlay permission to display the lock screen"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/btnGrantPermission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grant Overlay Permission"
                android:textColor="#FFFFFF"
                android:background="#000000"
                android:layout_marginTop="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" />

            <Button
                android:id="@+id/btnGrantNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grant Notification Access"
                android:textColor="#FFFFFF"
                android:background="#2196F3"
                android:layout_marginTop="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" />

        </LinearLayout>

        <!-- Controls Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="20dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lock Screen Service"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical">

                        <View
                            android:id="@+id/statusIndicator"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@drawable/status_indicator" />

                        <TextView
                            android:id="@+id/statusText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Stopped"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/serviceToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:thumbTint="@color/switch_thumb_color"
                    app:trackTint="@color/switch_track_color" />

            </LinearLayout>

            <Button
                android:id="@+id/btnPreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preview Clock"
                android:textColor="#000000"
                android:background="#E0E0E0"
                android:layout_marginTop="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" />

        </LinearLayout>

        <!-- Customization Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="20dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customization"
                android:textSize="12sp"
                android:textColor="#666666"
                android:textAllCaps="true"
                android:letterSpacing="0.1" />

            <Button
                android:id="@+id/btnCustomColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clock Color (Tap to Change)"
                android:textColor="#FFFFFF"
                android:background="#FFFFFF"
                android:layout_marginTop="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Font Style"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="24dp" />

            <android.widget.Spinner
                android:id="@+id/fontSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:padding="12dp"
                android:background="@android:drawable/btn_dropdown" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Font Size"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Small"
                    android:textSize="12sp"
                    android:textColor="#666666" />

                <SeekBar
                    android:id="@+id/fontSizeSeek"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:max="100"
                    android:progress="50"
                    android:progressTint="#9C27B0"
                    android:thumbTint="#9C27B0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Large"
                    android:textSize="12sp"
                    android:textColor="#666666" />

            </LinearLayout>

            <TextView
                android:id="@+id/fontSizeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200sp"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Display Options"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rotate 180Â°"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/rotationSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:thumbTint="@color/switch_thumb_color"
                    app:trackTint="@color/switch_track_color" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Volume Swipe Control"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/volumeSwipeSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:thumbTint="@color/switch_thumb_color"
                    app:trackTint="@color/switch_track_color"
                    android:checked="true" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lowest Brightness Limit"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-99%"
                    android:textSize="12sp"
                    android:textColor="#666666" />

                <SeekBar
                    android:id="@+id/brightnessLimitSeek"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:max="99"
                    android:progress="5"
                    android:progressTint="#3F51B5"
                    android:thumbTint="#3F51B5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textSize="12sp"
                    android:textColor="#666666" />

            </LinearLayout>

            <TextView
                android:id="@+id/brightnessLimitValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-5%"
                android:textSize="14sp"
                android:textColor="#3F51B5"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:layout_gravity="center_horizontal" />

            </LinearLayout>

        <!-- Weather Settings Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="20dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weather Settings"
                android:textSize="12sp"
                android:textColor="#666666"
                android:textAllCaps="true"
                android:letterSpacing="0.1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enable Weather"
                        android:textSize="16sp"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Show weather screen on lock screen"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/weatherSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:thumbTint="@color/switch_thumb_color"
                    app:trackTint="@color/switch_track_color"
                    android:checked="true" />

            </LinearLayout>

        </LinearLayout>

        <!-- Prayer Times Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="20dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prayer Times Settings"
                android:textSize="12sp"
                android:textColor="#666666"
                android:textAllCaps="true"
                android:letterSpacing="0.1" />

            <TextView
                android:id="@+id/locationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location not set"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="12dp" />

            <Button
                android:id="@+id/btnGetLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Current Location"
                android:textColor="#FFFFFF"
                android:background="#009688"
                android:layout_marginTop="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" />

            <!-- Madhab Selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asr Calculation Method"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Using University of Karachi calculation"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />

            <RadioGroup
                android:id="@+id/madhabRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radioShafi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shafi (Standard - shadow equals object)"
                    android:textSize="14sp"
                    android:textColor="@color/radio_text_color"
                    android:buttonTint="@color/radio_button_color"
                    android:checked="true"
                    android:paddingStart="8dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:background="@drawable/radio_button_bg" />

                <RadioButton
                    android:id="@+id/radioHanafi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hanafi (shadow equals twice the object)"
                    android:textSize="14sp"
                    android:textColor="@color/radio_text_color"
                    android:buttonTint="@color/radio_button_color"
                    android:paddingStart="8dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/radio_button_bg" />

            </RadioGroup>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
